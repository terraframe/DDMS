      </mdWebForm>
      
      <mdBusiness name="dss.vector.solutions.form.business.HumanBloodIndex"
          label="Human Blood Index"
          description="Denotes the amount of human blood found in a collection"
          generateController="false">
        <attributes>
          <char name="oid" label="Form ID" size="255" indexType="unique index" />
          <reference name="disease" label="Disease" type="dss.vector.solutions.general.Disease" />
          <char name="collectionId" label="Collection ID" size="255" removable="true" required="true" />
          <!-- <reference name="collectionId" label="Collection ID" required="true" type="dss.vector.solutions.entomology.MosquitoCollection"/> -->
