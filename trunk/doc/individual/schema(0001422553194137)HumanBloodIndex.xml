          label="Vector collection form">
        <fields>
          <char name="oid" label="Form ID" displayLength="16" maxLength="255" order="0" mdAttribute="oid" unique="true" required="true" />
          <char name="collectionId" label="Collection ID" displayLength="16" maxLength="255" order="1" mdAttribute="collectionId" unique="true" required="true" removable="true" showOnSearch="true" />
          <!-- <reference name="collectionId" label="Collection ID" mdAttribute="collectionId" order="1" required="true"/> -->
