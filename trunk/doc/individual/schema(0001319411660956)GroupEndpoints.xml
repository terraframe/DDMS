<version xsi:noNamespaceSchemaLocation="classpath:com/runwaysdk/resources/xsd/version.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <doIt>
    <create></create>
    <update>
      <mdUtil name="dss.vector.solutions.generator.MdFormUtil">
        <create>
          <mdMethod
            name="getFormTree"
            label="Get Form Tree"
            description="Gets all fields, recursively, for a form and returns a JSON object of the structure."
            returnType="java.lang.String"
            static="true">
            <mdParameter
              name="mdFormId"
              label="MdForm Id"
              order="0"
              type="java.lang.String" />
          </mdMethod>
          <mdMethod
            name="getGroupFields"
            label="Get Group Fields"
            description="Returns all fields of a group in order"
            returnType="com.runwaysdk.system.metadata.MdWebField[]"
            static="true">
            <mdParameter
              name="groupId"
              label="MdGroup Id"
              order="0"
              type="java.lang.String"/>
          </mdMethod>
          <mdMethod
            name="addToGroup"
            label="Add To Group"
            description="Adds a field to a group."
            returnType="void"
            static="true">
            <mdParameter
              name="groupId"
              label="MdGroup Id"
              order="0"
              type="java.lang.String"/>
            <mdParameter
              name="fieldId"
              label="MdField Id"
              order="1"
              type="java.lang.String"/>
          </mdMethod>
          <mdMethod
            name="removeFromGroup"
            label="Remove From Group"
            description="Removes a field to a group."
            returnType="void"
            static="true">
            <mdParameter
              name="groupId"
              label="MdGroup Id"
              order="0"
              type="java.lang.String"/>
            <mdParameter
              name="fieldId"
              label="MdField Id"
              order="1"
              type="java.lang.String"/>
          </mdMethod>
          <mdMethod
            name="deleteGroup"
            label="Delete Group"
            description="Deletes the group and puts its containing MdFields back on the MdForm"
            returnType="void"
            static="true">
            <mdParameter
              name="groupId"
              label="MdGroup Id"
              description="The MdGroup to delete"
              order="0"
              type="java.lang.String"/>
          </mdMethod>
        </create>
      </mdUtil>
    </update>
  </doIt>
  <undoIt>
    <delete>
      <object key="dss.vector.solutions.generator.MdFormUtil.deleteGroup" type="com.runwaysdk.system.metadata.MdMethod"/>
      <object key="dss.vector.solutions.generator.MdFormUtil.addToGroup" type="com.runwaysdk.system.metadata.MdMethod"/>
      <object key="dss.vector.solutions.generator.MdFormUtil.removeFromGroup" type="com.runwaysdk.system.metadata.MdMethod"/>
      <object key="dss.vector.solutions.generator.MdFormUtil.getFormTree" type="com.runwaysdk.system.metadata.MdMethod"/>
      <object key="dss.vector.solutions.generator.MdFormUtil.getGroupFields" type="com.runwaysdk.system.metadata.MdMethod"/>
    </delete>
  </undoIt>
</version>
