      <mdInformation
        name="dss.vector.solutions.general.OutbreakAlert"
        label="Outbreak Alert">
        <attributes>
          <char
            name="alertType"
            label="Alert Type"
            size="255" />
          <char
            name="thresholdType"
            label="Threshold Type"
            size="255" />
          <char
            name="entityLabel"
            label="Entity Label"
            size="255" />
          <integer
            name="threshold"
            label="Threshold" />
          <long
            name="totalCases"
            label="Total Cases" />
        </attributes>
      </mdInformation>
    </create>
    <update>
      <mdBusiness
        name="dss.vector.solutions.general.ThresholdData">
        <create>
          <mdMethod
            name="checkThresholdViolation"
            label="Check Threshold"
            static="true"
            returnType="void">
            <mdParameter
              name="date"
              label="Date"
              order="0"
              type="java.util.Date" />
            <mdParameter
              name="entity"
              label="Entity"
              order="1"
              type="dss.vector.solutions.geo.generated.GeoEntity" />
            <mdParameter
              name="count"
              label="Count"
              order="2"
              type="java.lang.Long" />
          </mdMethod>
        </create>
      </mdBusiness>
    </update>
    <permissions>
      <method
        methodName="checkThresholdViolation"
        type="dss.vector.solutions.general.ThresholdData">
        <assignedRole
          roleName="Administrator" />
      </method>
      <role
        roleName="mdss.coordinator">
        <grant>
          <mdBusinessPermission
            type="dss.vector.solutions.general.ThresholdData">
            <mdMethodPermission
              methodName="checkThresholdViolation">
              <operation
                name="EXECUTE" />
            </mdMethodPermission>
          </mdBusinessPermission>
        </grant>
      </role>
    </permissions>
  </doIt>
