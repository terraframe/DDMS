<version xsi:noNamespaceSchemaLocation="classpath:com/runwaysdk/resources/xsd/version.xsd"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<doIt>
		<create>

			<mdException
				name="dss.vector.solutions.query.DatabaseViewMissingException"
				label="DatabaseViewMissingException"
				message="The database view does not exist for this query. Make sure the query is saved and has columns selected.">
			</mdException>

			<mdException
				name="dss.vector.solutions.query.NoDBViewForDefaultQueryException"
				label="NoDBViewForDefaultQueryException"
				message="Please select a query before retrieving its database view name.">
			</mdException>

		</create>
		<update>

			<mdBusiness name="dss.vector.solutions.query.SavedSearch">
				<create>
					<mdMethod name="getDatabaseViewName" static="false"
						returnType="java.lang.String" label="Get Database View Name">
					</mdMethod>
				</create>
			</mdBusiness>

		</update>
	</doIt>
	<undoIt>
		<delete>

			<object key="dss.vector.solutions.query.SavedSearch.getDatabaseViewName"
				type="com.runwaysdk.system.metadata.MdMethod" />

			<object key="dss.vector.solutions.query.DatabaseViewMissingException"
				type="com.runwaysdk.system.metadata.MdException" />

			<object key="dss.vector.solutions.query.NoDBViewForDefaultQueryException"
				type="com.runwaysdk.system.metadata.MdException" />

		</delete>
	</undoIt>
</version>
