<version xsi:noNamespaceSchemaLocation="classpath:com/runwaysdk/resources/xsd/version.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <doIt>
    <update>
      <mdBusiness name="dss.vector.solutions.query.CycleJob">
        <create>
          <attributes>
            <integer name="imageWidth" label="Image width" required="true" defaultValue="773" />
            <integer name="imageHeight" label="Image height" required="true" defaultValue="1000" />
          </attributes>
        </create>
      </mdBusiness>
      <mdView name="dss.vector.solutions.query.CycleJobView">
        <create>
          <attributes>
            <virtual concrete="imageWidth" type="dss.vector.solutions.query.CycleJob" />
            <virtual concrete="imageHeight" type="dss.vector.solutions.query.CycleJob" />
          </attributes>
        </create>
      </mdView>
      <mdException name="dss.vector.solutions.query.MapInUseException" message="The map cannot be modified because it is currently in use by an active cycle job." />      
    </update>
  </doIt>
  <undoIt>
    <delete>
      <object key="dss.vector.solutions.query.CycleJobView.imageWidth" type="com.runwaysdk.system.metadata.MdAttribute" />
      <object key="dss.vector.solutions.query.CycleJobView.imageHeight" type="com.runwaysdk.system.metadata.MdAttribute" />
      <object key="dss.vector.solutions.query.CycleJob.imageWidth" type="com.runwaysdk.system.metadata.MdAttribute" />
      <object key="dss.vector.solutions.query.CycleJob.imageHeight" type="com.runwaysdk.system.metadata.MdAttribute" />
    </delete>
  </undoIt>
</version>
