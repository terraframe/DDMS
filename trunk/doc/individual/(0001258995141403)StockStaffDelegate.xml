<version
  xsi:noNamespaceSchemaLocation="../../profiles/version_gis.xsd"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <doIt>
    <create>
      <object
        type="com.terraframe.mojo.system.Roles"
        key="Roles.mdss.stockStaff">
        <attribute
          name="roleName"
          value="mdss.stockStaff" />
        <attributeStruct
          name="displayLabel">
          <attribute
            name="defaultLocale"
            value="Stock Staff" />
        </attributeStruct>
      </object>
    </create>
    <permissions>
      <role
        roleName="mdss.GUIVisibility">
        <grant>
          <mdViewPermission
            type="dss.vector.solutions.general.ThresholdDataView">
            <operation
              name="CREATE" />
            <operation
              name="READ" />
            <operation
              name="READ_ALL_ATTRIBUTES" />
            <operation
              name="WRITE" />
            <operation
              name="WRITE_ALL_ATTRIBUTES" />
            <operation
              name="DELETE" />
          </mdViewPermission>
          <mdBusinessPermission
            type="dss.vector.solutions.general.ThresholdData">
            <operation
              name="READ" />
          </mdBusinessPermission>
        </grant>
      </role>
      <role
        roleName="mdss.coordinator, mdss.operationalManager">
        <grant>
          <mdBusinessPermission
            type="dss.vector.solutions.general.ThresholdData">
            <operation
              name="CREATE" />
            <operation
              name="WRITE" />
            <operation
              name="WRITE_ALL_ATTRIBUTES" />
            <operation
              name="DELETE" />
          </mdBusinessPermission>
          <mdRelationshipPermission
            type="dss.vector.solutions.general.WeeklyThreshold">
            <operation
              name="CREATE" />
            <operation
              name="DELETE" />
            <operation
              name="WRITE" />
            <operation
              name="WRITE_ALL_ATTRIBUTES" />
          </mdRelationshipPermission>
          <mdViewPermission
            type="dss.vector.solutions.general.ThresholdDataView">
            <mdMethodPermission
              methodName="setThresholdConfiguration">
              <operation
                name="EXECUTE" />
            </mdMethodPermission>
          </mdViewPermission>          
        </grant>
      </role>
      <role
        roleName="mdss.stockStaff">
        <superRole
          roleName="mdss.GUIVisibility" />
        <grant>
          <mdBusinessPermission
            type="dss.vector.solutions.stock.StockStaff">
            <operation
              name="CREATE" />
            <operation
              name="WRITE" />
            <operation
              name="WRITE_ALL_ATTRIBUTES" />
            <operation
              name="DELETE" />
          </mdBusinessPermission>
          <mdBusinessPermission
            type="dss.vector.solutions.Person">
            <operation
              name="CREATE" />
            <operation
              name="WRITE" />
            <operation
              name="WRITE_ALL_ATTRIBUTES" />
            <operation
              name="DELETE" />
          </mdBusinessPermission>
          <mdBusinessPermission
            type="dss.vector.solutions.stock.StockItem">
            <operation
              name="CREATE" />
            <operation
              name="WRITE" />
            <operation
              name="WRITE_ALL_ATTRIBUTES" />
            <operation
              name="DELETE" />
          </mdBusinessPermission>
          <mdBusinessPermission
            type="dss.vector.solutions.stock.StockEvent">
            <operation
              name="CREATE" />
            <operation
              name="WRITE" />
            <operation
              name="WRITE_ALL_ATTRIBUTES" />
            <operation
              name="DELETE" />
          </mdBusinessPermission>
        </grant>
      </role>
    </permissions>
  </doIt>
  <undoIt>
    <delete>
      <object
        key="Roles.mdss.stockStaff"
        type="com.terraframe.mojo.system.Roles" />
    </delete>
  </undoIt>
