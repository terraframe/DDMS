<version
	xsi:noNamespaceSchemaLocation="../../profiles/version_gis.xsd"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<doIt>
		<update>
			<mdView
				name="dss.vector.solutions.general.ThresholdDataView">
				<attributes>
					<boolean
						name="thresholdType"
						positiveLabel="Source" />
				</attributes>
			</mdView>

			<mdView
				name="dss.vector.solutions.general.ThresholdCalculationTypeView">
				<mdMethod
					name="calculatePoliticalThresholds"
					label="Calculate source thresholds" />
			</mdView>
 
			<mdView
				name="dss.vector.solutions.export.ThresholdDataExcelView"
				label="Threshold Data Excel View">
				<attributes>
					<virtual
						concrete="thresholdType"
						name="thresholdType"
						label="Threshold Type"
						description="Source or Facility"
						type="dss.vector.solutions.general.ThresholdDataView" />
				</attributes>
			</mdView>

			<mdController
				name="dss.vector.solutions.general.ThresholdDataController">
				<mdAction
					name="calculatePoliticalThresholds"
					label="Calculate source thresholds"
					description="Calculate source thresholds">
				</mdAction>
			</mdController>
			
			<object
				type="dss.vector.solutions.general.SystemAlert"
				key="PoliticalOutbreakIdentification">
				<attribute
					name="emailBody"
					value="Source Identification email:  $thresholdType of $alertType at [$entityLabel].  Total Cases: [$totalCases], Threshold: [$threshold]" />
				<attributeStruct
					name="displayName">
					<attribute
						name="defaultLocale"
						value="Source Outbreak Identification" />
				</attributeStruct>
			</object>

			<object
				type="dss.vector.solutions.general.SystemAlert"
				key="PoliticalOutbreakNotification">
				<attribute
					name="emailBody"
					value="Source Notification email:  $thresholdType of $alertType at [$entityLabel].  Total Cases: [$totalCases], Threshold: [$threshold]" />
				<attributeStruct
					name="displayName">
					<attribute
						name="defaultLocale"
						value="Source Outbreak Notification" />
				</attributeStruct>
			</object>
 		</update>
	</doIt>
	<undoIt>
		<delete></delete>
	</undoIt>
</version>