<version xsi:noNamespaceSchemaLocation="classpath:com/runwaysdk/resources/xsd/version.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <doIt>
    <create></create>
    <update>
      <mdUtil name="dss.vector.solutions.ExcelImportManager">
        <create>
          <mdMethod name="excelImportFromVault" label="excelImportFromVault" returnType="void" static="true">
            <mdParameter name="vaultId" label="vaultId" order="0" type="java.lang.String"/>
            <mdParameter name="config" label="config" order="1" type="java.lang.String"/>
          </mdMethod>
        </create>
      </mdUtil>
    
      <mdController name="dss.vector.solutions.generator.ExcelController">
        <create>
          <mdAction name="downloadErrorSpreadsheet" label="downloadErrorSpreadsheet" isPost="false" isQuery="false">
            <mdParameter name="historyId" label="historyId" order="0" type="java.lang.String" />
          </mdAction>
          <mdAction name="resolveTermSynonyms" label="resolveTermSynonyms" isPost="false" isQuery="false">
            <mdParameter name="historyId" label="historyId" order="0" type="java.lang.String" />
          </mdAction>
          <mdAction name="resolveGeoSynonyms" label="resolveGeoSynonyms" isPost="false" isQuery="false">
            <mdParameter name="historyId" label="historyId" order="0" type="java.lang.String" />
          </mdAction>
          <mdAction name="excelImportFromVault" label="excelImportFromVault" isPost="false" isQuery="false">
            <mdParameter name="vaultId" label="vaultId" order="0" type="java.lang.String"/>
            <mdParameter name="config" label="config" order="1" type="java.lang.String"/>
          </mdAction>
        </create>
      </mdController>
      
      <mdBusiness name="dss.vector.solutions.ExcelImportHistory" label="Excel Import history">
        <create>
          <attributes>
            <text name="reconstructionJSON" label="reconstructionJSON" description="A JSON object that can be used to reconstruct the excel import should the user decide to later modify synonyms and reimport." />
            <integer name="numberUnknownTerms" label="numberUnknownTerms" defaultValue="0" rejectNegative="true" />
            <integer name="numberUnknownGeos" label="numberUnknownGeos" defaultValue="0" rejectNegative="true" />
          </attributes>
          <mdMethod name="downloadErrorSpreadsheet" label="downloadErrorSpreadsheet" returnType="void" static="false" >
            <mdParameter name="outputStream" label="outputStream" order="0" type="java.io.OutputStream"  />
          </mdMethod>
        </create>
      </mdBusiness>
       
      <mdView name="dss.vector.solutions.ontology.UnknownTerm">
        <create>
          <attributes>
            <char name="mdAttributeId" label="mdAttributeId" size="64" />
          </attributes>
        </create>
      </mdView>
    </update>
    <delete>
      <object key="dss.vector.solutions.ExcelImportHistory.serializedUnknownTerms" type="com.runwaysdk.system.metadata.MdAttributeText"/>
      <object key="dss.vector.solutions.ExcelImportHistory.serializedUnknownGeos" type="com.runwaysdk.system.metadata.MdAttributeText"/>
      <object key="dss.vector.solutions.ExcelImportHistory.hasError" type="com.runwaysdk.system.metadata.MdAttributeBoolean"/>
    </delete>
  </doIt>
  <undoIt>
    <update>
      <mdBusiness name="dss.vector.solutions.ExcelImportHistory">
        <create>
          <attributes>
            <text name="serializedUnknownGeos" label="serialized unknown geos" required="false" />
            <text name="serializedUnknownTerms" label="serialized unknown terms" required="false" />
            <boolean name="hasError" label="hasError"/>
          </attributes>
        </create>
      </mdBusiness>
    </update>
    <delete>
      <object key="dss.vector.solutions.ExcelImportManager.excelImportFromVault" type="com.runwaysdk.system.metadata.MdMethod" />
      <object key="dss.vector.solutions.generator.ExcelController.downloadErrorSpreadsheet" type="com.runwaysdk.system.metadata.MdAction" />
      <object key="dss.vector.solutions.generator.ExcelController.resolveTermSynonyms" type="com.runwaysdk.system.metadata.MdAction" />
      <object key="dss.vector.solutions.generator.ExcelController.resolveGeoSynonyms" type="com.runwaysdk.system.metadata.MdAction" />
      <object key="dss.vector.solutions.generator.ExcelController.excelImportFromVault" type="com.runwaysdk.system.metadata.MdAction" />
      <object key="dss.vector.solutions.ExcelImportHistory.reconstructionJSON" type="com.runwaysdk.system.metadata.MdAttributeText" />
      <object key="dss.vector.solutions.ExcelImportHistory.downloadErrorSpreadsheet" type="com.runwaysdk.system.metadata.MdMethod" />
      <object key="dss.vector.solutions.ExcelImportHistory.numberUnknownTerms" type="com.runwaysdk.system.metadata.MdAttributeInteger" />
      <object key="dss.vector.solutions.ExcelImportHistory.numberUnknownGeos" type="com.runwaysdk.system.metadata.MdAttributeInteger" />
      <object key="dss.vector.solutions.ontology.UnknownTerm.mdAttributeId" type="com.runwaysdk.system.metadata.MdAttributeCharacter" />
    </delete>
  </undoIt>
</version>
