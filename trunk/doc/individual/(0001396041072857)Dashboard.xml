<version xsi:noNamespaceSchemaLocation="classpath:com/runwaysdk/resources/xsd/version.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <doIt>
    <create>
      <mdBusiness name="dss.vector.solutions.kaleidoscope.dashboard.Dashboard" label="Dashboard" cacheAlgorithm="everything" generateController="true">
        <attributes>
          <localChar name="displayLabel" label="Label" required="true" />
          <reference name="country" label="Country" type="dss.vector.solutions.geo.generated.GeoEntity" required="true" />
          <reference name="dashboardRole" label="Role" type="com.runwaysdk.system.Roles" required="true" />
					<reference
						name="disease"
						label="Disease"
						type="dss.vector.solutions.general.Disease"
						required="true" />          
        </attributes>
        <mdMethod name="getSortedDashboards" label="Get Sorted Dashboards" static="true" returnType="dss.vector.solutions.kaleidoscope.dashboard.DashboardQuery" />
        <mdMethod name="getSortedTypes" label="Get Sorted Types" description="Returns a sorted list of de-referenced MdClasses stored by MetadataWrapper" returnType="com.runwaysdk.system.metadata.MdClass[]" />
        <mdMethod name="applyWithOptions" label="Apply With Options" static="false" returnType="void">
          <mdParameter order="0" description="Array of user ids assigned to this dashboard" name="userIds" label="User Ids" type="java.lang.String[]" />
        	<mdParameter name="name" label="Dashboard Name" order="1" type="java.lang.String" />
        </mdMethod>        
        <mdMethod static="true" description="Creates a new dashboard." name="create" label="create" returnType="dss.vector.solutions.kaleidoscope.dashboard.Dashboard">
          <mdParameter order="0" description="A Dashboard to create." name="dto" label="A Dashboard to apply." type="dss.vector.solutions.kaleidoscope.dashboard.Dashboard" />
        </mdMethod>
        <mdMethod static="true" description="Assign users to a dashboard" name="assignUsers" label="Assign Users" returnType="void">
          <mdParameter order="0" description="Dashboard Id" name="dashboardId" label="Dashboard Id." type="java.lang.String" />
          <mdParameter order="1" description="Array of user ids assigned to this dashboard" name="userIds" label="User Ids" type="java.lang.String[]" />
        </mdMethod>
      </mdBusiness>

      <mdRelationship name="dss.vector.solutions.kaleidoscope.dashboard.DashboardMetadata" label="Dashboard Metadata" cacheAlgorithm="everything" generateController="false">
        <parent cardinality="*" name="dss.vector.solutions.kaleidoscope.dashboard.Dashboard" method="Dashboard" />
        <child cardinality="*" name="dss.vector.solutions.kaleidoscope.dashboard.MetadataWrapper" method="Metadata" />
        <attributes>
          <integer name="listOrder" required="true" />
        </attributes>
      </mdRelationship>

      <mdBusiness name="dss.vector.solutions.kaleidoscope.dashboard.MetadataWrapper" label="Dashboard Wrapper" cacheAlgorithm="everything">
        <attributes>
          <reference name="wrappedMdClass" type="com.runwaysdk.system.metadata.MdClass" label="MdClass" required="true" />
        </attributes>
        <mdMethod name="getSortedAttributes" label="Get Sorted Attributes" description="Returns a sorted list of de-referenced MdAttributes stored by MetadataAttribute" returnType="dss.vector.solutions.kaleidoscope.dashboard.MdAttributeView[]">
        </mdMethod>
      </mdBusiness>

      <mdView name="dss.vector.solutions.kaleidoscope.dashboard.MdAttributeView" label="MdAttribute View">
        <attributes>
          <char name="mdClassId" required="true" label="MdClass " size="64" />
          <char name="mdAttributeId" required="true" label="MdAttribute " size="64" />
          <char name="displayLabel" required="true" label="Display Label" size="255" />
        </attributes>
      </mdView>

      <mdRelationship name="dss.vector.solutions.kaleidoscope.dashboard.DashboardAttributes" label="Dashboard Attributes" cacheAlgorithm="everything" generateController="false" >
        <parent cardinality="*" name="dss.vector.solutions.kaleidoscope.dashboard.MetadataWrapper" method="DashboardMetadata" />
        <child cardinality="*" name="dss.vector.solutions.kaleidoscope.dashboard.AttributeWrapper" method="AttributeWrapper" />
        <attributes>
          <integer name="listOrder" required="true" />
        </attributes>
      </mdRelationship>

      <mdBusiness name="dss.vector.solutions.kaleidoscope.dashboard.AttributeWrapper" label="Attribute Wrapper" cacheAlgorithm="everything">
        <attributes>
          <reference name="wrappedMdAttribute" type="com.runwaysdk.system.metadata.MdAttribute" label="MdAttribute" required="true" />
        </attributes>
      </mdBusiness>

      <mdException name="dss.vector.solutions.kaleidoscope.dashboard.NoDashboardException" label="No Dashboard Exception" description="Thrown when a user tries to render a map without a dashboard." message="You must first create a Dashboard before you can render a map.">
      </mdException>
      <mdException name="dss.vector.solutions.kaleidoscope.dashboard.DashboardHasNoMapException" label="Dashboard Has No Map Exception" description="Thrown when a user tries to render a dashboard that has no map." message="This Dashboard has no map to display.">
      </mdException>
    </create>
  </doIt>
  <undoIt>
    <delete>
      <object key="dss.vector.solutions.kaleidoscope.dashboard.AttributeWrapper" type="com.runwaysdk.system.metadata.MdBusiness" />
      <object key="dss.vector.solutions.kaleidoscope.dashboard.MetadataWrapper" type="com.runwaysdk.system.metadata.MdBusiness" />
      <object key="dss.vector.solutions.kaleidoscope.dashboard.DashboardAttributes" type="com.runwaysdk.system.metadata.MdRelationship" />
      <object key="dss.vector.solutions.kaleidoscope.dashboard.DashboardMetadata" type="com.runwaysdk.system.metadata.MdRelationship" />
      <object key="dss.vector.solutions.kaleidoscope.dashboard.Dashboard" type="com.runwaysdk.system.metadata.MdBusiness" />
      <object key="dss.vector.solutions.kaleidoscope.dashboard.MdAttributeView" type="com.runwaysdk.system.metadata.MdView" />
    </delete>
  </undoIt>
</version>
