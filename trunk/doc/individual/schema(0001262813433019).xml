<version xsi:noNamespaceSchemaLocation="../../profiles/version_gis.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <doIt>
    <create></create>
    <update>
    
      <mdBusiness name="dss.vector.solutions.query.Layer">
        <create>
          <attributes>
            <boolean
              name="showThematicValue"
              label="Show Thematic Value"
              required="true"
              defaultValue="true"
              positiveLabel="true"
              negativeLabel="false" />
            <boolean
              name="clipToBaseLayer"
              label="Clip To Base Layer"
              required="true"
              defaultValue="false"
              positiveLabel="true"
              negativeLabel="false"/>
          </attributes>
        </create>
      </mdBusiness>    

      <mdBusiness
        name="dss.vector.solutions.query.Styles">
        <create>
          <attributes>
            <integer
              name="pointSize"
              label="Point Size"
              defaultValue="12"
              required="true"
              rejectNegative="true"
              rejectZero="true"/>
            <integer
              name="pointRotation"
              label="Point Rotation"
              required="true"
              rejectNegative="true"
              defaultValue="0" />
            <integer
              name="labelRotation"
              label="Label Rotation"
              required="true"
              rejectNegative="true"
              defaultValue="0" />
            <decimal
              name="anchorPointX"
              label="Label Anchor Point X"
              rejectNegative="true"
              required="true"
              defaultValue="0"
              length="2"
              decimal="1" />
            <decimal
              name="anchorPointY"
              label="Label Anchor Point Y"
              rejectNegative="true"
              required="true"
              defaultValue="0"
              length="2"
              decimal="1" />
            <integer
              name="displacementX"
              label="Label Displacement X"
              required="true"
              defaultValue="0" />
            <integer
              name="displacementY"
              label="Label Displacement Y"
              required="true"
              defaultValue="0" />
            <decimal
              name="polygonFillOpacity"
              label="Polygon Color Opacity"
              description="The color opacity of a polygon."
              required="true"
              rejectNegative="true"
              defaultValue="1.0"
              decimal="2"
              length="3"/>
            <decimal
              name="polygonStrokeOpacity"
              label="Polygon Border Opacity"
              description="The border opacity of a polygon."
              required="true"
              rejectNegative="true"
              defaultValue="1.0"
              decimal="2"
              length="3"/>
            <decimal
              name="pointStrokeOpacity"
              label="Point Border Opacity"
              description="The border opacity of a point."
              required="true"
              rejectNegative="true"
              defaultValue="1.0"
              decimal="2"
              length="3"/>
          </attributes>
        </create>
      </mdBusiness>    
    
    </update>
  </doIt>
  <undoIt>
    <delete></delete>
  </undoIt>
</version>