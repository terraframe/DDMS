        name="dss.vector.solutions.general.ThresholdDataView">
        <create>
          <attributes>
            <boolean
              name="thresholdType"
              label="Threshold Type"
              positiveLabel="Political"
              negativeLabel="Facility"
              defaultValue="true"
              required="true" />
          </attributes>
          <mdMethod
            name="getFacilityViews"
            returnType="dss.vector.solutions.general.ThresholdDataView[]"
            label="Get Facility Views"
            static="true">
            <mdParameter
              name="geoId"
              label="Geo Id"
              order="0"
              type="java.lang.String" />
            <mdParameter
              name="season"
              label="Malaria Season"
              order="1"
              type="dss.vector.solutions.general.MalariaSeason" />
          </mdMethod>
        </create>
      </mdView>
      <mdTree
        name="dss.vector.solutions.general.WeeklyThreshold"
        label="Weekly Threshold">
        <create>
          <attributes>
            <integer
              name="facilityNotification"
              label="Facility T1" />
            <integer
              name="facilityIdentification"
              label="Facility T2" />
            <reference
              name="lastFacilityNotification"
              label="Last Facility Notification"
              type="dss.vector.solutions.general.EpiWeek" />
            <reference
              name="lastFacilityIdentification"
              label="Last Facility Identification"
              type="dss.vector.solutions.general.EpiWeek" />
          </attributes>
        </create>
        <parent
          cardinality="*"
          name="dss.vector.solutions.general.ThresholdData"
          method="Thresholds" />
        <child
          cardinality="*"
          name="dss.vector.solutions.general.EpiWeek"
          method="EpiWeeks" />
      </mdTree>
      <mdController
        name="dss.vector.solutions.general.ThresholdDataController"
        label="Threshold Data Controller">
        <mdAction
          name="searchForThresholdData"
          isPost="true"
          isQuery="false">
          <create>
            <mdParameter
              name="thresholdType"
              label="Threshold Type"
              order="2"
              type="java.lang.Boolean" />
          </create>
        </mdAction>
      </mdController>
    </update>    
  </doIt>
  <undoIt>
    <delete>
      <object
        key="dss.vector.solutions.general.ThresholdDataController.searchForThresholdData.thresholdType"
        type="com.terraframe.mojo.system.metadata.MdParameter" />
