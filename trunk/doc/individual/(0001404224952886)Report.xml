<version xsi:noNamespaceSchemaLocation="classpath:com/runwaysdk/resources/xsd/version.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <doIt>
    <create>
      <mdView name="dss.vector.solutions.kaleidoscope.report.ReportParameter" label="Report parameter">
        <attributes>
          <text name="parameterName" label="Parameter name" required="true" />
          <text name="parameterValue" label="Parameter value" />
        </attributes>
      </mdView>

      <mdBusiness name="dss.vector.solutions.kaleidoscope.report.KaleidoscopeReport" label="Report item" generateController="true">
        <attributes>
          <file name="design" label="Report design" required="true" />
          <file name="document" label="Report document" />
          <char name="reportName" label="Report name" required="true" size="255" indexType="unique index" />
          <localChar name="reportLabel" label="Report label" required="true" size="255" />
          <boolean name="cacheDocument" label="Use report document?" required="true" positiveLabel="Yes" negativeLabel="No" defaultValue="false" />
          <reference name="dashboard" label="Dashboard" type="dss.vector.solutions.kaleidoscope.dashboard.Dashboard" required="true" indexType="unique index" />
        </attributes>
        <mdMethod name="applyWithFile" label="Apply with file" returnType="void" static="false">
          <mdParameter name="fileStream" label="fileStream" order="0" type="java.io.InputStream" />
        </mdMethod>
        <mdMethod name="getDesignAsStream" label="Get design as stream" returnType="java.io.InputStream" static="false" />
        <mdMethod name="getDocumentAsStream" label="Get document as stream" returnType="java.io.InputStream" static="false" />
        <mdMethod name="render" label="Render" returnType="java.lang.Long" static="false">
          <mdParameter name="outputStream" label="outputStream" order="0" type="java.io.OutputStream" />
          <mdParameter name="parameters" label="parameters" order="1" type="dss.vector.solutions.kaleidoscope.report.ReportParameter[]" />
          <mdParameter name="baseURL" label="Base URL" order="2" type="java.lang.String" />
          <mdParameter name="reportURL" label="Report URL" order="3" type="java.lang.String" />
        </mdMethod>
        <mdMethod name="validatePermissions" label="Validate permissions" returnType="void" static="false" />
        <mdMethod name="getURL" label="Get url" returnType="java.lang.String" static="false" />
        <mdMethod name="getParameterDefinitions" label="Get parameter definitions" static="false" returnType="java.lang.String" />
        <mdMethod name="getQueriesForReporting" label="Get queries for reporting" static="true" returnType="dss.vector.solutions.kaleidoscope.report.PairView[]" />
        <mdMethod name="getSupportedAggregation" label="Get Supported aggregation" static="true" returnType="dss.vector.solutions.kaleidoscope.report.PairView[]">
          <mdParameter name="queryId" label="Query id" order="0" type="java.lang.String" />
        </mdMethod>
        <mdMethod name="getValuesForReporting" label="Get values for reporting" static="true" returnType="com.runwaysdk.query.ValueQuery">
          <mdParameter name="queryId" label="Query id" order="0" type="java.lang.String" />
          <mdParameter name="context" label="context" order="1" type="java.lang.String" />
          <mdParameter name="pageSize" label="pageSize" order="4" type="java.lang.Integer" />
          <mdParameter name="pageNumber" label="pageNumber" order="5" type="java.lang.Integer" />
        </mdMethod>
        <mdMethod name="getPageCount" label="Get page count" static="true" returnType="java.lang.Integer">
          <mdParameter name="queryId" label="Query id" order="0" type="java.lang.String" />
          <mdParameter name="context" label="context" order="1" type="java.lang.String" />
          <mdParameter name="pageSize" label="pageSize" order="4" type="java.lang.Integer" />
        </mdMethod>
        <mdMethod name="getMetadataForReporting" label="Get metadata for reporting" static="true" returnType="com.runwaysdk.query.ValueQuery">
          <mdParameter name="queryId" label="Query id" order="0" type="java.lang.String" />
          <mdParameter name="context" label="context" order="1" type="java.lang.String" />
        </mdMethod>
        <mdMethod name="getReportItemForDashboard" label="Get report item" static="true" returnType="dss.vector.solutions.kaleidoscope.report.KaleidoscopeReport">
          <mdParameter name="dashboardId" label="Dashboard id" order="0" type="java.lang.String" />
        </mdMethod>

      </mdBusiness>

      <mdView name="dss.vector.solutions.kaleidoscope.report.KaleidoscopeReportView" label="Report item" generateController="true">
        <attributes>
          <text name="reportId" label="Report id" />
          <text name="reportName" label="Report name" />
          <text name="dashboardLabel" label="Dashboard label" />
          <text name="reportLabel" label="Report label" />
        </attributes>
        <mdMethod name="remove" label="Remove" returnType="void" static="false" />
      </mdView>

      <mdView name="dss.vector.solutions.kaleidoscope.report.PairView" label="Report item" generateController="true">
        <attributes>
          <text name="value" label="Value" />
          <text name="label" label="Label" />
        </attributes>
      </mdView>

      <mdException name="dss.vector.solutions.kaleidoscope.report.KaleidoscopeReportException" label="Report item exception" message="Report must have a report design document with the .rptdesign extension" />
      <mdException name="dss.vector.solutions.kaleidoscope.report.MissingReportDesignException" label="Missing report design" message="Report design does not exist" />
      <mdException name="dss.vector.solutions.kaleidoscope.report.MissingReportDocumentException" label="Report item exception" message="The cached report document does not exist.  Please make sure you have set up the scheduler to generate the report document." />
      <mdException name="dss.vector.solutions.kaleidoscope.report.UnsupportedOutputFormatException" label="Unsupported output format exception" message="Output format [{outputFormat}] is not supported">
        <attributes>
          <text name="outputFormat" label="Output format" />
        </attributes>
      </mdException>
      <mdException name="dss.vector.solutions.kaleidoscope.report.ReportRenderException" label="Report render exception" message="An error has occured while rendering the report: {errorMessage}">
        <attributes>
          <text name="errorMessage" label="Error message" />
        </attributes>
      </mdException>
      <mdException name="dss.vector.solutions.kaleidoscope.report.UnknownReportException" label="Unknown report exception" message="Unable to find a report with the report name [{reportName}]">
        <attributes>
          <text name="reportName" label="Report name" />
        </attributes>
      </mdException>
      <mdException name="dss.vector.solutions.kaleidoscope.report.UnsupportedDrillThroughFormatException" label="Unsupported drill through format exception" message="The drill through report format [{outputFormat}] is not supported.">
        <attributes>
          <text name="outputFormat" label="Output format" />
        </attributes>
      </mdException>

      <mdException name="dss.vector.solutions.kaleidoscope.report.InvalidReportDefinitionException" label="Invalid report definition" message="Uploaded file is not a valid report definition" />

      <object type="com.runwaysdk.system.Vault" key="default" />
    </create>
    <update>
      <mdController name="dss.vector.solutions.kaleidoscope.report.KaleidoscopeReportController">
        <mdAction name="create">
          <create>
            <mdParameter name="design" label="Report design" order="1" type="com.runwaysdk.controller.MultipartFileParameter" />
          </create>
        </mdAction>
        <mdAction name="update">
          <create>
            <mdParameter name="design" label="Report design" order="1" type="com.runwaysdk.controller.MultipartFileParameter" />
          </create>
        </mdAction>
        <create>
          <mdAction name="run" isPost="false" label="Run">
            <mdParameter name="report" label="report" order="0" type="java.lang.String" />
            <mdParameter name="configuration" label="configuration" order="1" type="java.lang.String" />
          </mdAction>
        </create>
      </mdController>
    </update>
    <permissions>
      <method methodName="render" type="dss.vector.solutions.kaleidoscope.report.KaleidoscopeReport">
        <assignedRole roleName="Administrator" />
      </method>
    </permissions>
  </doIt>
  <undoIt>
    <delete>
      <object key="dss.vector.solutions.kaleidoscope.report.MultipleReportException" type="com.runwaysdk.system.metadata.MdException" />
      <object key="dss.vector.solutions.kaleidoscope.report.UnsupportedDrillThroughFormatException" type="com.runwaysdk.system.metadata.MdException" />
      <object key="dss.vector.solutions.kaleidoscope.report.UnknownReportException" type="com.runwaysdk.system.metadata.MdException" />
      <object key="dss.vector.solutions.kaleidoscope.report.InvalidReportDefinitionException" type="com.runwaysdk.system.metadata.MdException" />
      <object key="dss.vector.solutions.kaleidoscope.report.MissingReportDesignException" type="com.runwaysdk.system.metadata.MdException" />
      <object key="dss.vector.solutions.kaleidoscope.report.MissingReportDocumentException" type="com.runwaysdk.system.metadata.MdException" />
      <object key="dss.vector.solutions.kaleidoscope.report.UnsupportedOutputFormatException" type="com.runwaysdk.system.metadata.MdException" />
      <object key="dss.vector.solutions.kaleidoscope.report.ReportRenderException" type="com.runwaysdk.system.metadata.MdException" />
      <object key="dss.vector.solutions.kaleidoscope.report.KaleidoscopeReportException" type="com.runwaysdk.system.metadata.MdException" />
      <object key="dss.vector.solutions.kaleidoscope.report.KaleidoscopeReport" type="com.runwaysdk.system.metadata.MdBusiness" />
      <object key="dss.vector.solutions.kaleidoscope.report.ReportParameter" type="com.runwaysdk.system.metadata.MdView" />
    </delete>
  </undoIt>
</version>
