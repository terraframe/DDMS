<version xsi:noNamespaceSchemaLocation="../../profiles/version_gis.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <doIt>
    <create>
    
      <mdView
        name="dss.vector.solutions.query.QueryInfo"
        label="Query Summary"
        description="Contains query information including min, max, occurance, etc.">
        <attributes>
          <char
            name="minimum"
            label="Minimum"
            required="false"
            description="The minimum value of the thematic value across the query."
            size="50"/>
          <char
            name="maximum"
            label="Maximum"
            required="false"
            description="The maximum value of the thematic value across the query."
            size="50"/>
          <integer
            name="totalResults"
            rejectNegative="true"
            required="true"
            label="Total Results" />
        </attributes>
      </mdView>    
    
    </create>
    <update>
    
      <mdController
        name="dss.vector.solutions.query.LayerController">
        <create>
          <mdAction
            name="calculateQueryInfo"
            label="Calculate Query Info"
            description="Calculates the Query Information"
            isPost="true">
            <mdParameter
              name="layer"
              label="Layer"
              description="The temporary Layer object used to store the query configuration"
              order="0"
              type="dss.vector.solutions.query.Layer"/>
          </mdAction>
        </create>
      </mdController>
      
      <mdBusiness
        name="dss.vector.solutions.query.Layer">
        <create>
          <mdMethod
            name="calculateQueryInfo"
            label="Calculate Query Info"
            static="false"
            returnType="dss.vector.solutions.query.QueryInfo">
          </mdMethod>
        </create>
      </mdBusiness>          
      
      <mdBusiness
        name="dss.vector.solutions.query.Styles">
        <attributes>
          <integer
            name="fontSize"
            rejectZero="false"/>
        </attributes>
      </mdBusiness>
    
    </update>
  </doIt>
  <undoIt>
    <delete></delete>
  </undoIt>
</version>