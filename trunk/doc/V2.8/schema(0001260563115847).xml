<version xsi:noNamespaceSchemaLocation="../../profiles/version_gis.xsd"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<doIt>
		<update>
			<mdInformation name="dss.vector.solutions.general.OutbreakAlert">
				<create>
					<attributes>
						<boolean name="emailFailure" label="Email not sent"
							defaultValue="false"
							positiveLabel="This alert was configured to send an email; however, sending the email was unsuccessful at this time.  It will be retried according to the current configuration settings."
							negativeLabel="" />
					</attributes>

				</create>
			</mdInformation>
		</update>
	</doIt>
	<undoIt>
		<delete>
			<object key="dss.vector.solutions.general.OutbreakAlert.emailFailure"
				type="com.runwaysdk.system.metadata.MdAttributeBoolean" />
		</delete>
	</undoIt>
</version>
