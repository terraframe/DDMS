<version xsi:noNamespaceSchemaLocation="../../profiles/version_gis.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <doIt>
    <delete>
      <object
        key="dss.vector.solutions.ontology.Term.inactiveMalaria"
        type="com.runwaysdk.system.metadata.MdAttributeBoolean" />
        
      <object
        key="dss.vector.solutions.ontology.Term.inactiveDengue"
        type="com.runwaysdk.system.metadata.MdAttributeBoolean" />  
    
    </delete>
  
    <create>
    
      <mdBusiness
        name="dss.vector.solutions.ontology.InactiveProperty"
        label="Inactive Property"
        description="Inactive Property for a Term"
        generateController="false">
        <attributes>
          <boolean
            name="inactive"
            label="Inactive"
            description="Denotes if a term is inactive" 
            required="true"
            defaultValue="false"
            positiveLabel="true"
            negativeLabel="false" />
          <reference
            name="disease"
            label="Disease"
            description="Disease for which the term is inactive"
            required="true"
            type="dss.vector.solutions.general.Disease" />
        </attributes>
      </mdBusiness>
      
      <mdRelationship
        name="dss.vector.solutions.ontology.InactiveByDisease"
        label="Inactive By Disease"
        description="Relates a Term with its inactive status"
        generateController="false"
        composition="true">
        <parent cardinality="1" name="dss.vector.solutions.ontology.Term" method="Term"/>
        <child cardinality="*" name="dss.vector.solutions.ontology.InactiveProperty" method="InactiveProperties"/>
      </mdRelationship>
    
    </create>
  </doIt>
  <undoIt>
    <delete></delete>
  </undoIt>
</version>
