<version
  xsi:noNamespaceSchemaLocation="../../profiles/version_gis.xsd"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <doIt>
    <create>
      <mdView
        name="dss.vector.solutions.general.EpiDate"
        label="EpiDate">
        <attributes>
          <enumeration
            name="periodType"
            label="Period Type"
            required="true"
            type="dss.vector.solutions.surveillance.PeriodType"
            description="The period type"
            selectMultiple="false"/>
          <integer
            name="period"
            label="Period"
            required="true"/>
          <integer
            name="epiYear"
            label="Year"
            required="true"/>
          <date
            name="startDate"
            label="Start Date"
            required="true"/>
          <date
            name="endDate"
            label="End Date"
            required="true"/>
        </attributes>
        <mdMethod
          name="getInstanceByDate"
          label="getInstance"
          description="sudo Construtor"
          static="true"
          returnType="dss.vector.solutions.general.EpiDate">
          <mdParameter
            name="startDate"
            label="startDate"
            type="java.util.Date"
            order="0"/>
          <mdParameter
            name="endDate"
            label="startDate"
            type="java.util.Date"
            order="1"/>
        </mdMethod>
        <mdMethod
          name="getInstanceByPeriod"
          label="getInstance"
          description="sudo Construtor"
          static="true"
          returnType="dss.vector.solutions.general.EpiDate">
          <mdParameter
            name="periodType"
            label="periodType"
            type="dss.vector.solutions.surveillance.PeriodType"
            order="0"/>
          <mdParameter
            name="period"
            label="period"
            type="java.lang.Integer"
            order="1"/>
          <mdParameter
            name="epiYear"
            label="Year"
            type="java.lang.Integer"
            order="2"/>
        </mdMethod>
      </mdView>
    </create>
    <update>

      <mdBusiness
        name="dss.vector.solutions.general.MalariaSeason">
        <create>
          <mdMethod
            name="getEpiWeeks"
            label="Get Epi Weeks"
            description="Returns all the epiWeeks In this season"
            static="false"
            returnType="dss.vector.solutions.general.EpiDate[]">
          </mdMethod>
        </create>
      </mdBusiness>
    </update>

  </doIt>
  <undoIt>
    <delete></delete>
  </undoIt>
</version>
