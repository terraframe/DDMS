<version xsi:noNamespaceSchemaLocation="../../profiles/version_gis.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <doIt>
    <create>
      <mdBusiness
        name="dss.vector.solutions.geo.AllPaths"
        label="All Paths"
        description="Contains recursive relationships for all paths within the table."
        extendable="false"
        isAbstract="false"
        generateController="false"
        table="allpaths_geo">
        <attributes>
          <reference
            name="parentGeoEntity"
            label="Parent Geo Entity"
            required="true"
            unique="false"
            type="dss.vector.solutions.geo.generated.GeoEntity"
            description="The parent geo entity contains the child geo entity."
            indexType="non-unique index"/>
          <reference
            name="parentUniversal"
            label="Parent Universal"
            required="true"
            unique="false"
            type="com.runwaysdk.system.metadata.MdBusiness"
            description="The Universal of the Parent"
            indexType="non-unique index"/>
          <reference
            name="childGeoEntity"
            label="Child Geo Entity"
            required="true"
            unique="false"
            type="dss.vector.solutions.geo.generated.GeoEntity"
            description="The child geo entity is located in the parent geo entity."
            indexType="non-unique index"/>
          <reference
            name="childUniversal"
            label="Child Universal"
            required="true"
            unique="false"
            type="com.runwaysdk.system.metadata.MdBusiness"
            description="The Universal of the Child"
            indexType="non-unique index"/>
        </attributes>
      </mdBusiness>

      <mdIndex
        type="dss.vector.solutions.geo.AllPaths"
        label="Parent Child Geo Entity Index"
        active="true"
        unique="true"
        description="Enforces a unique index between a the parent geo entiy and the child geo entity">
        <attribute
          name="parentGeoEntity"
          indexOrder="0" />
        <attribute
          name="childGeoEntity"
          indexOrder="1" />
      </mdIndex>


    </create>
    <update>
      <mdBusiness
        name="dss.vector.solutions.MDSSUser">
        <create>
        <attributes>
          <reference
            name="rootGeoEntity"
            description="The root geo entity for this user"
            label="Root Geo Entity"
            required="false"
            type="dss.vector.solutions.geo.generated.GeoEntity" />
        </attributes>
        </create>
      </mdBusiness>

      <mdBusiness
        name="dss.vector.solutions.MDSSUser">
        <create>
        <mdMethod
          name="changeRootGeoEntity"
          label="Change Root Geo Entity"
          description="Change Roo Geo Entity"
          returnType="void"
          static="true">
          <mdParameter
            name="geoEntityId"
            label="Geo Entity Id"
            order="0"
            description="Geo Entity Id"
            type="java.lang.String" />
        </mdMethod>
        </create>
      </mdBusiness>

    </update>
  </doIt>
  <undoIt>
    <delete></delete>
  </undoIt>
</version>
