<version
  xsi:noNamespaceSchemaLocation="../../profiles/version_gis.xsd"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <doIt>
    <create>
      <mdController
        name="dss.vector.solutions.util.LocalizationController"
        label="Localization Controller"
        description="Localization Controller">
        <mdAction
          name="selectLocales"
          label="Select Export Locales"
          description="Selects locales for export"
          isPost="false">
        </mdAction>
        <mdAction
          name="importFile"
          label="Import Localization File"
          description="Imports a localization excel file"
          isPost="true">
        </mdAction>
        <mdAction
          name="exportFile"
          label="Export Localization File"
          description="Exports a localization excel file"
          isPost="true">
          <mdParameter
            name="locales"
            order="0"
            type="java.lang.String[]"/>
        </mdAction>
      </mdController>
      <mdBusiness
        name="dss.vector.solutions.util.LocalizationFacade"
        label="Localization Facade"
        description="Localization Facade"
        extendable="false"
        isAbstract="true"
        generateController="false">
        <mdMethod
          name="exportFile"
          label="Export File"
          description="Exports the localization excel file"
          static="true"
          returnType="java.io.InputStream">
          <mdParameter
            name="locales"
            label="Locales"
            order="0"
            type="java.lang.String[]"/>
        </mdMethod>
        <mdMethod
          name="importFile"
          label="Import File"
          description="Imports the localization excel file"
          static="true"
          returnType="void">
          <mdParameter
            name="file"
            label="Localization File"
            order="0"
            type="java.io.InputStream"/>
        </mdMethod>
      </mdBusiness>
    </create>
  </doIt>
  <undoIt>
    <delete>
    <!-- 
     -->
      <object
        key="dss.vector.solutions.util.LocalizationController"
        type="com.runwaysdk.system.metadata.MdController" />
      <object
        key="dss.vector.solutions.util.LocalizationFacade"
        type="com.runwaysdk.system.metadata.MdBusiness" />
    </delete>
  </undoIt>
</version>
