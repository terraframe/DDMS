<version
  xsi:noNamespaceSchemaLocation="../../profiles/version_gis.xsd"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <doIt>
    <update>
      <mdView
        name="dss.vector.solutions.general.PopulationDataView"
        label="Population Data">
        <create>
          <attributes>
            <boolean
              name="populationType"
              label="Population Type"
              positiveLabel="Political"
              negativeLabel="Facility"
              defaultValue="true"
              required="true" />
          </attributes>
          <mdMethod
            name="getFacilityViews"
            returnType="dss.vector.solutions.general.PopulationDataView[]"
            label="Get Facility Views"
            static="true">
            <mdParameter
              name="geoId"
              label="Geo Id"
              order="0"
              type="java.lang.String" />
            <mdParameter
              name="yearOfData"
              label="Year"
              order="1"
              type="java.lang.Integer" />
          </mdMethod>
        </create>
      </mdView>
      <mdController
        name="dss.vector.solutions.general.PopulationDataController"
        label="Population Data Controller">
        <mdAction
          name="searchForPopulationData"
          isPost="true"
          isQuery="false">
          <create>
            <mdParameter
              name="populationType"
              label="Population Type"
              order="2"
              type="java.lang.Boolean" />
          </create>
        </mdAction>
      </mdController>
    </update>    
  </doIt>
  <undoIt>
    <delete>
      <object
        key="dss.vector.solutions.general.PopulationDataController.searchForPopulationData.populationType"
        type="com.runwaysdk.system.metadata.MdParameter" />
      <object
        key="dss.vector.solutions.general.PopulationDataView.populationType"
        type="com.runwaysdk.system.metadata.MdAttribute" />
      <object
        key="dss.vector.solutions.general.PopulationDataView.getFacilityViews"
        type="com.runwaysdk.system.metadata.MdMethod" />
    </delete>
  </undoIt>
</version>
