<web-app xmlns="http://java.sun.com/xml/ns/j2ee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd"
    version="2.4">

  <display-name>Terraframe Project</display-name>
  <description>
	Terraframe Project
  </description>

  <jsp-config>
    <jsp-property-group>
        <url-pattern>*.jsp</url-pattern>
        <page-encoding>UTF-8</page-encoding>
    </jsp-property-group>
  </jsp-config>

  <filter>
    <filter-name>CharsetFilter</filter-name>
    <filter-class>dss.vector.solutions.CharsetFilter</filter-class>
    <init-param>
      <param-name>requestEncoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
  </filter>

  <filter-mapping>
    <filter-name>CharsetFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>


  <servlet>
    <servlet-name>SecureFileDownloadServlet</servlet-name>
    <display-name>Secure File Download Servlet</display-name>
    <servlet-class>
        com.runwaysdk.web.SecureFileDownloadServlet
    </servlet-class>
  </servlet>

  <listener>
    <listener-class>com.runwaysdk.web.UploadListener</listener-class>
  </listener>

  <servlet>
    <servlet-name>SecureFileUploadServlet</servlet-name>
    <display-name>Secure File Upload Servlet</display-name>
    <servlet-class>
        com.runwaysdk.web.SecureFileUploadServlet
    </servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>SecureFileDownloadServlet</servlet-name>
    <url-pattern>/Mojo/SecureFileDownloadServlet</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>SecureFileUploadServlet</servlet-name>
    <url-pattern>/Mojo/SecureFileUploadServlet</url-pattern>
  </servlet-mapping>

    <servlet>
    <servlet-name>WebFileDownloadServlet</servlet-name>
    <display-name>Web File Download Servlet</display-name>
    <servlet-class>
        com.runwaysdk.web.WebFileDownloadServlet
    </servlet-class>
  </servlet>

  <servlet>
    <servlet-name>WebFileUploadServlet</servlet-name>
    <display-name>Web File Upload Servlet</display-name>
    <servlet-class>
        com.runwaysdk.web.WebFileUploadServlet
    </servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>WebFileDownloadServlet</servlet-name>
    <url-pattern>/Mojo/WebFileDownloadServlet</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>WebFileUploadServlet</servlet-name>
    <url-pattern>/Mojo/WebFileUploadServlet</url-pattern>
  </servlet-mapping>

    <listener>
     <listener-class>org.apache.axis.transport.http.AxisHTTPSessionListener</listener-class>
  </listener>

  <servlet>
    <servlet-name>AxisServlet</servlet-name>
    <display-name>Apache-Axis Servlet</display-name>
    <servlet-class>
        org.apache.axis.transport.http.AxisServlet
    </servlet-class>
  </servlet>

  <servlet>
    <servlet-name>AdminServlet</servlet-name>
    <display-name>Axis Admin Servlet</display-name>
    <servlet-class>
        org.apache.axis.transport.http.AdminServlet
    </servlet-class>
    <load-on-startup>100</load-on-startup>
  </servlet>

  <servlet>
    <servlet-name>SOAPMonitorService</servlet-name>
    <display-name>SOAPMonitorService</display-name>
    <servlet-class>
        org.apache.axis.monitor.SOAPMonitorService
    </servlet-class>
    <init-param>
      <param-name>SOAPMonitorPort</param-name>
      <param-value>5001</param-value>
    </init-param>
    <load-on-startup>100</load-on-startup>
  </servlet>

  <servlet-mapping>
    <servlet-name>AxisServlet</servlet-name>
    <url-pattern>/servlet/AxisServlet</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>AxisServlet</servlet-name>
    <url-pattern>*.jws</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>AxisServlet</servlet-name>
    <url-pattern>/services/*</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>SOAPMonitorService</servlet-name>
    <url-pattern>/SOAPMonitor</url-pattern>
  </servlet-mapping>

    <!-- currently the W3C havent settled on a media type for WSDL;
    http://www.w3.org/TR/2003/WD-wsdl12-20030303/#ietf-draft
    for now we go with the basic 'it's XML' response -->
  <mime-mapping>
    <extension>wsdl</extension>
     <mime-type>text/xml</mime-type>
  </mime-mapping>

  <mime-mapping>
    <extension>xsd</extension>
    <mime-type>text/xml</mime-type>
  </mime-mapping>

  <servlet>
    <servlet-name>
      JSONControllerServlet
    </servlet-name>
    <servlet-class>
      com.runwaysdk.web.json.JSONControllerServlet
    </servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>
      JSONControllerServlet
    </servlet-name>
    <url-pattern>
      /Mojo/JSONControllerServlet
    </url-pattern>
  </servlet-mapping>

