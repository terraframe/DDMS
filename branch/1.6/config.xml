<cruisecontrol>
    <project name="MDSS">

        <listeners>
            <currentbuildstatuslistener file="logs/${project.name}/status.txt"/>
        </listeners>

        <bootstrappers>
            <antbootstrapper anthome="apache-ant-1.7.0" buildfile="projects/${project.name}/cc-build.xml" target="clean" />
        </bootstrappers>
  <!--
        <modificationset quietperiod="30">
           touch any file in connectfour project to trigger a build 
            <filesystem folder="projects/${project.name}"/>
        </modificationset>
-->
        <schedule interval="300">
            <ant anthome="apache-ant-1.7.0" buildfile="projects/${project.name}/cc-build.xml"/>
        </schedule>

        <log>
		<merge dir="projects/${project.name}/scripts/ant/deploy/test-results"/>
        </log>

