<version
	xsi:noNamespaceSchemaLocation="classpath:com/runwaysdk/resources/xsd/version.xsd"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<doIt>
		<update>
			<mdBusiness
				name="dss.vector.solutions.general.ThresholdCalculationType">
				<create>
					<attributes>
						<double
							name="sourceNotificationMinimum"
							label="Source Notification Minumum Value"
							length="12"
							decimal="2"
							required="false"
							rejectNegative="true"
							rejectZero="true"
							description="The minumum value to be set for a notification threshold during calculations" />
						<double
							name="sourceIdentificationMinimum"
							label="Source Identification Minumum Value"
							length="12"
							decimal="2"
							required="false"
							rejectNegative="true"
							rejectZero="true"
							description="The minumum value to be set for an identification threshold during calculations" />
					</attributes>
				</create>
			</mdBusiness>
			<mdView
				name="dss.vector.solutions.general.ThresholdCalculationTypeView">
				<create>
					<attributes>
						<virtual
							concrete="sourceNotificationMinimum"
							type="dss.vector.solutions.general.ThresholdCalculationType" />
						<virtual
							concrete="sourceIdentificationMinimum"
							type="dss.vector.solutions.general.ThresholdCalculationType" />
					</attributes>
				</create>
			</mdView>
		</update>
	</doIt>


	<undoIt>
		<delete>
			<object
				key="dss.vector.solutions.general.ThresholdCalculationType.sourceNotificationMinimum"
				type="com.runwaysdk.system.metadata.MdAttribute" />
			<object
				key="dss.vector.solutions.general.ThresholdCalculationType.sourceIdentificationMinimum"
				type="com.runwaysdk.system.metadata.MdAttribute" />
			<object
				key="dss.vector.solutions.general.ThresholdCalculationTypeView.sourceNotificationMinimum"
				type="com.runwaysdk.system.metadata.MdAttribute" />
			<object
				key="dss.vector.solutions.general.ThresholdCalculationTypeView.sourceIdentificationMinimum"
				type="com.runwaysdk.system.metadata.MdAttribute" />
		</delete>
	</undoIt>
</version>
