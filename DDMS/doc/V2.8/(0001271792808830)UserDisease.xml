<version
  xsi:noNamespaceSchemaLocation="../../profiles/version_gis.xsd"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <doIt>
    <update>
      <mdBusiness
        name="dss.vector.solutions.UserSettings">
        <create>
          <attributes>
            <reference
              name="disease"
              label="Disease"
              required="true"
              type="dss.vector.solutions.general.Disease"
              defaultValueKey="MALARIA" />
          </attributes>
        </create>
      </mdBusiness>
    </update>
    <update>
      <mdView
        name="dss.vector.solutions.PersonView">
        <create>
          <attributes>
            <virtual
              concrete="disease"
              type="dss.vector.solutions.UserSettings" />
          </attributes>
        </create>
      </mdView>
      <mdView
        name="dss.vector.solutions.export.PersonExcelView">
        <create>
          <attributes>
            <char
              name="disease"
              label="Current Disease"
              size="64"
              type="dss.vector.solutions.UserSettings" />
          </attributes>
        </create>
      </mdView>
    </update>
  </doIt>
  <undoIt>
    <delete>
      <object
        key="dss.vector.solutions.PersonView.disease"
        type="com.runwaysdk.system.metadata.MdAttributeVirtual" />
      <object
        key="dss.vector.solutions.export.PersonExcelView.disease"
        type="com.runwaysdk.system.metadata.MdAttributeCharacter" />
      <object
        key="dss.vector.solutions.UserSettings.disease"
        type="com.runwaysdk.system.metadata.MdAttributeEnumeration" />
    </delete>
  </undoIt>
</version>
