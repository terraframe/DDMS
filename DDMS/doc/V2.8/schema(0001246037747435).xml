<version
  xsi:noNamespaceSchemaLocation="../../profiles/version_gis.xsd"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <doIt>
    <update>
      <mdController name="dss.vector.solutions.query.QueryController">
        <create>
          <mdAction
            name="newQuery"
            label="New Query"
            isPost="false"
            description="Request to create a new SavedQuery.">
          </mdAction>
          <mdAction
            name="saveQuery"
            label="Save Query"
            isPost="true"
            description="Saves a query as a SavedSearch object.">
          </mdAction>
        </create>
      </mdController>
      
      <mdBusiness
        name="dss.vector.solutions.query.SavedSearch">
        <create>
          <mdMethod
            name="getSearchesForType"
            label="Get Searches For Type"
            description="Returns all SavedSearches for a specific type of query."
            returnType="dss.vector.solutions.query.SavedSearchViewQuery"
            static="true">
            <mdParameter
              name="searchType"
              label="Search Type"
              order="0"
              type="java.lang.String" />
          </mdMethod>
          <mdMethod
            name="saveSearch"
            label="Save Search"
            description="Saves a new search"
            static="true"
            returnType="dss.vector.solutions.query.SavedSearchView">
            <mdParameter
              name="savedSearchView"
              label="Saved Search View"
              order="0"
              type="dss.vector.solutions.query.SavedSearchView" />
          </mdMethod>
          <mdMethod
            name="updateSearch"
            label="Update Search"
            description="Updates a search"
            static="true"
            returnType="dss.vector.solutions.query.SavedSearchView">
            <mdParameter
              name="savedSearchView"
              label="Saved Search View"
              order="0"
              type="dss.vector.solutions.query.SavedSearchView" />
          </mdMethod>
        </create>
      </mdBusiness>
      
    </update>
    
    <create>
      <mdException
        name="dss.vector.solutions.geo.DuplicateMapDataException"
        label="Duplicate Map Data Exception"
        description="Thrown when a user tries to create a map with duplicate geo entities.">
      </mdException>
      
      <mdException
        name="dss.vector.solutions.query.NoSearchSpecifiedException"
        label="No Search Specified Exception"
        description="Thrown when a user tries to perform an operation without first selecting a search.">
      </mdException>      
    </create>
    
  </doIt>
  <undoIt>
    <delete></delete>
  </undoIt>
</version>
