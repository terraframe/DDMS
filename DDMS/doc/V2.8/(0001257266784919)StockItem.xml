<version
  xsi:noNamespaceSchemaLocation="../../profiles/version_gis.xsd"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <doIt>
    <create>
      <mdBusiness
        name="dss.vector.solutions.stock.StockItem"
        label="Stock Item"
        generateController="true">
        <attributes>
          <reference
            name="itemName"
            label="Name"
            type="dss.vector.solutions.ontology.Term"
            required="true" />
          <float
            name="quantity"
            label="Unit Quantity"
            length="30"
            decimal="5"
            required="true"
            rejectNegative="true" />
          <reference
            name="unit"
            label="Unit"
            type="dss.vector.solutions.ontology.Term"
            required="true" />
        </attributes>
        <mdMethod
          name="getView"
          label="Get View"
          returnType="dss.vector.solutions.stock.StockItemView"
          static="false" />
        <mdMethod
          name="lockView"
          label="Lock View"
          returnType="dss.vector.solutions.stock.StockItemView"
          static="false" />
        <mdMethod
          name="unlockView"
          label="Unlock View"
          returnType="dss.vector.solutions.stock.StockItemView"
          static="false" />
      </mdBusiness>

      <mdIndex
        type="dss.vector.solutions.stock.StockItem"
        active="true"
        unique="true"
        label="Stock Item Index">
        <attribute
          name="itemName"
          indexOrder="0" />
        <attribute
          name="quantity"
          indexOrder="1" />
        <attribute
          name="unit"
          indexOrder="2" />
      </mdIndex>

      <mdView
        name="dss.vector.solutions.stock.StockItemView"
        label="Stock Item">
        <attributes>
          <char
            name="concreteId"
            label="Concrete Id"
            size="255"
            required="true" />
          <virtual
            type="dss.vector.solutions.stock.StockItem"
            concrete="itemName"
            name="itemName" />
          <virtual
            type="dss.vector.solutions.stock.StockItem"
            concrete="quantity"
            name="quantity" />
          <virtual
            type="dss.vector.solutions.stock.StockItem"
            concrete="unit"
            name="unit" />
        </attributes>
        <mdMethod
          name="getPage"
          label="Get Page"
          description="Gets a page of Views"
          static="true"
          returnType="dss.vector.solutions.stock.StockItemViewQuery">
          <mdParameter
            name="sortAttribute"
            label="Sort Attribute"
            type="java.lang.String"
            order="0" />
          <mdParameter
            name="isAscending"
            label="Is Ascending"
            type="java.lang.Boolean"
            order="1" />
          <mdParameter
            name="pageSize"
            label="Page Size"
            type="java.lang.Integer"
            order="2" />
          <mdParameter
            name="pageNumber"
            label="Page Number"
            type="java.lang.Integer"
            order="3" />
        </mdMethod>
        <mdMethod
          name="deleteConcrete"
          label="Delete Concrete"
          returnType="void"
          static="false">
        </mdMethod>
      </mdView>

      <object
        key="Ontology__dss.vector.solutions.stock.StockItemView.itemName"
        type="dss.vector.solutions.ontology.BrowserField">
        <attributeReference
          name="mdAttribute"
          key="dss.vector.solutions.stock.StockItemView.itemName" />
      </object>

      <object
        key="Ontology__dss.vector.solutions.stock.StockItemView.unit"
        type="dss.vector.solutions.ontology.BrowserField">
        <attributeReference
          name="mdAttribute"
          key="dss.vector.solutions.stock.StockItemView.unit" />
      </object>

      <mdProblem
        name="dss.vector.solutions.stock.ItemLeafProblem"
        label="Item Leaf Problem"
        extends="dss.vector.solutions.NotificationProblem">
        <attributes>
          <char
            name="itemName"
            label="Item Name"
            size="255" />
        </attributes>
      </mdProblem>
    </create>
    <update>
      <mdController
        name="dss.vector.solutions.stock.StockItemController">
        <mdAction
          name="cancel"
          isPost="true"
          isQuery="false">
          <mdParameter
            name="dto"
            type="dss.vector.solutions.stock.StockItemView"
            order="0" />
        </mdAction>
        <mdAction
          name="delete"
          isPost="true"
          isQuery="false">
          <mdParameter
            name="dto"
            type="dss.vector.solutions.stock.StockItemView"
            order="0" />
        </mdAction>
        <mdAction
          name="create"
          isPost="true"
          isQuery="false">
          <mdParameter
            name="dto"
            order="0"
            type="dss.vector.solutions.stock.StockItemView" />
        </mdAction>
        <mdAction
          name="update"
          isPost="true"
          isQuery="false">
          <mdParameter
            name="dto"
            order="0"
            type="dss.vector.solutions.stock.StockItemView" />
        </mdAction>
      </mdController>
    </update>
  </doIt>
  <undoIt>
    <delete>
      <object
        key="Ontology__dss.vector.solutions.stock.StockItemView.itemName"
        type="dss.vector.solutions.ontology.BrowserField" />
      <object
        key="Ontology__dss.vector.solutions.stock.StockItemView.unit"
        type="dss.vector.solutions.ontology.BrowserField" />
      <object
        key="dss.vector.solutions.stock.ItemLeafProblem"
        type="com.runwaysdk.system.metadata.MdProblem" />
      <object
        key="dss.vector.solutions.stock.StockItemController"
        type="com.runwaysdk.system.metadata.MdController" />
      <object
        key="dss.vector.solutions.stock.StockItemView"
        type="com.runwaysdk.system.metadata.MdView" />
      <object
        key="dss.vector.solutions.stock.StockItem"
        type="com.runwaysdk.system.metadata.MdBusiness" />
    </delete>
  </undoIt>
</version>
