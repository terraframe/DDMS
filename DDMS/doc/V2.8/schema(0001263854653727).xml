<version xsi:noNamespaceSchemaLocation="../../profiles/version_gis.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <doIt>
    <create>
    
      <mdException
        name="dss.vector.solutions.query.NonUniqueLayerNameException"
        label="Non-Unique Layer Name Exception"
        description="Thrown when a layer name is not unique among the other layers in a map.">
      </mdException>

      <mdException
        name="dss.vector.solutions.query.NoLayersInExportException"
        label="No Layers In Export Exception"
        description="Thrown when no layers are available for a map export.">
      </mdException>
    
    </create>
    <update>
    
      <mdController
        name="dss.vector.solutions.query.MappingController">
        <create>
          <mdAction
            name="exportShapefile"
            label="Export Shapefile"
            description="Exports a given map's layers as a shapefile download."
            isPost="true">
            <mdParameter
              name="mapId"
              label="Map Id"
              order="0"
              type="java.lang.String" />
          </mdAction>
        </create>
      </mdController>
    
      <mdBusiness
        name="dss.vector.solutions.query.SavedMap">
        <create>
          <mdMethod
            name="exportShapefile"
            label="Export Shapefile"
            returnType="java.io.InputStream"
            static="false">
          </mdMethod>
        </create>
      </mdBusiness>
        
    
    </update>
  </doIt>
  <undoIt>
    <delete></delete>
  </undoIt>
</version>
