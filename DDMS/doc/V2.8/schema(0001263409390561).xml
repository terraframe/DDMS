<version xsi:noNamespaceSchemaLocation="../../profiles/version_gis.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <doIt>
    <delete>
    
      <object
        key="dss.vector.solutions.query.Styles.fontStyle"
        type="com.runwaysdk.system.metadata.MdAttributeCharacter"/>
        
    </delete>
    <create>
    
      <enumerationMaster
        name="dss.vector.solutions.query.FontStyle"
        label="Font Styles">
        <attributes>
          <integer
            name="priority"
            label="Priority"
            description="The priority in the select list."
            rejectNegative="true"
            required="true"/>
        </attributes>
      </enumerationMaster>
      
      <object
        key="dss.vector.solutions.query.FontStyle.NORMAL"
        type="dss.vector.solutions.query.FontStyle">
        <attribute
          name="enumName"
          value="NORMAL"/>
        <attribute
          name="priority"
          value="0"/>
        <attributeStruct
          name="displayLabel">
          <attribute
            name="defaultLocale"
            value="Normal"/>
        </attributeStruct> 
      </object>      
      
      <object
        key="dss.vector.solutions.query.FontStyle.BOLD"
        type="dss.vector.solutions.query.FontStyle">
        <attribute
          name="enumName"
          value="BOLD"/>
        <attribute
          name="priority"
          value="1"/>
        <attributeStruct
          name="displayLabel">
          <attribute
            name="defaultLocale"
            value="Bold"/>
        </attributeStruct> 
      </object>
            
      <object
        key="dss.vector.solutions.query.FontStyle.ITALIC"
        type="dss.vector.solutions.query.FontStyle">
        <attribute
          name="enumName"
          value="ITALIC"/>
        <attribute
          name="priority"
          value="2"/>
        <attributeStruct
          name="displayLabel">
          <attribute
            name="defaultLocale"
            value="Italic"/>
        </attributeStruct> 
      </object>      
      
      <mdEnumeration
        name="dss.vector.solutions.query.FontStyles"
        type="dss.vector.solutions.query.FontStyle">
        <includeAll></includeAll>
      </mdEnumeration>
    
      <mdInformation
        name="dss.vector.solutions.query.LayerOmittedDuplicateDataInformation"
        label="Layer Omitted Duplicate Data Information"
        description="Created when a non-base layer has been omitted because it contains duplicate geo entities.">
        <attributes>
          <char
            name="layerName"
            label="Layer Name"
            required="true"
            size="255" />
        </attributes>
      </mdInformation>
      
      <mdInformation
        name="dss.vector.solutions.query.LayerOmittedNoDataInformation"
        label="Layer Omitted No Data Information"
        description="Created when a non-base layer has been ommitted because it contains no geo entity data.">
        <attributes>
          <char
            name="layerName"
            label="Layer Name"
            required="true"
            size="255" />
        </attributes>
      </mdInformation>    
    
      <mdInformation
        name="dss.vector.solutions.query.LayerOmittedQueryChangedInformation"
        label="Layer Omitted Query Changed Information"
        description="Created when a non-base layer has been omitted because the underlying query isn't mappable.">
        <attributes>
          <char
            name="layerName"
            label="Layer Name"
            required="true"
            size="255" />
          <char
            name="queryName"
            label="Query Name"
            required="true"
            size="255" />
        </attributes>
      </mdInformation>
      
      <mdException
        name="dss.vector.solutions.query.BaseLayerQueryChangedException"
        label="Base Layer Query Changed Exception"
        description="Thrown when the base layer's query has changed such that it is no longer mappable.">
        <attributes>
          <char
            name="layerName"
            label="Layer Name"
            required="true"
            size="255" />
          <char
            name="queryName"
            label="Query Name"
            required="true"
            size="255" />
        </attributes>
      </mdException>    
    
    </create>
    <update>
    
      <mdBusiness
        name="dss.vector.solutions.query.Layer">
        <attributes>
          <decimal
            name="opacity"
            defaultValue="0.75" />        
        </attributes>
        <create>
          <attributes>
            <boolean
              name="addToBBox"
              label="Add To Bounding Box"
              required="true"
              defaultValue="true"
              positiveLabel="true"
              negativeLabel="false" />
          </attributes>
        </create>
      </mdBusiness>    
    
      <mdBusiness
        name="dss.vector.solutions.query.Styles">
        <create>
          <attributes>
            <enumeration
              name="fontStyles"
              label="Font Style"
              required="true"
              type="dss.vector.solutions.query.FontStyles"
              defaultValue="NORMAL" />
            <integer
              name="labelHaloRadius"
              label="Label Halo Radius"
              rejectNegative="true"
              required="true"
              defaultValue="0"/>
            <decimal
              name="labelHaloOpacity"
              label="Label Halo Opacity"
              required="true"
              rejectNegative="true"
              defaultValue="1.0"
              decimal="2"
              length="3"/>
            <char
              name="labelHaloFill"
              label="Label Halo Color"
              description="Label Halo Color"
              required="true"
              defaultValue="#FFFFFF"
              size="7" />
          </attributes>
        </create>
      </mdBusiness>

    </update>
  </doIt>
  <undoIt>
    <delete></delete>
  </undoIt>
</version>
