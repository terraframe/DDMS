            <operation
              name="CREATE" />
            <operation
              name="READ" />
            <operation
              name="READ_ALL_ATTRIBUTES" />
            <operation
              name="WRITE" />
            <operation
              name="WRITE_ALL_ATTRIBUTES" />
          </mdViewPermission>
          <mdViewPermission
            type="dss.vector.solutions.geo.GeoEntityDefinition">
            <operation
