<version xsi:noNamespaceSchemaLocation="../../profiles/version_gis.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <doIt>

    <create>
    
      <mdBusiness
        name="dss.vector.solutions.DefaultGeoEntity"
        label="Default Geo Entity"
        description="The default Geo Entity of the system."
        extendable="false">
        <attributes>
          <reference
            name="geoEntity"
            required="true"
            label="GeoEntity"
            description="The default GeoEntity"
            type="dss.vector.solutions.geo.generated.GeoEntity" />
        </attributes>
        <mdMethod
          name="getDefaultGeoEntity"
          label="Get Default GeoEntity"
          description="Returns the singleton instance of DefaultGeoEntity"
          static="true"
          returnType="dss.vector.solutions.DefaultGeoEntity">
        </mdMethod>
      </mdBusiness>
      
    
      <object
        key="DEFAULT_GEO_ENTITY"
        type="dss.vector.solutions.DefaultGeoEntity">
        <attributeReference
          name="geoEntity"
          key="000000"/>
      </object>
    
    </create>  

    <update>
    
     <mdBusiness
        name="dss.vector.solutions.query.CategoryGen">
        <attributes>
          <char
            name="pointStrokeStart"
            defaultValue="#000000" />
          <char
            name="pointStrokeEnd"
            defaultValue="#000000" />
          <char
            name="polygonStrokeStart"
            defaultValue="#000000" />
          <char
            name="polygonStrokeEnd"
            defaultValue="#000000" />
          <char
            name="polygonFillStart"
            defaultValue="#000000" />
          <char
            name="polygonFillEnd"
            defaultValue="#000000" />
          <char
            name="fontFillStart"
            defaultValue="#000000" />
          <char
            name="fontFillEnd"
            defaultValue="#000000" />
          <char
            name="labelHaloFillStart"
            defaultValue="#000000" />
          <char
            name="labelHaloFillEnd"
            defaultValue="#000000" />
        </attributes>
      </mdBusiness>    
      
      <mdBusiness
        name="dss.vector.solutions.query.Layer">
        <mdMethod
          name="generateCategories">
          <create>
            <mdParameter
              name="currentLayer"
              description="A Layer object that represents this layer's live status in the form without being persisted."
              label="Current Layer"
              order="1"
              type="dss.vector.solutions.query.Layer" />
          </create>
        </mdMethod>
      </mdBusiness>

      <mdController
        name="dss.vector.solutions.query.LayerController">
        <mdAction
          name="generateCategories">
          <create>
            <mdParameter
              name="layer"
              description="A Layer object that represents this layer's live status in the form without being persisted."
              label="Current Layer"
              order="1"
              type="dss.vector.solutions.query.Layer" />
          </create>
        </mdAction>
      </mdController>       
    
    </update>    
  </doIt>
  <undoIt>
    <delete>
    
      <object
        key="dss.vector.solutions.query.LayerController.generateCategories.currentLayer"
        type="com.runwaysdk.system.metadata.MdParameter"/>
        
      <object
        key="dss.vector.solutions.query.Layer.generateCategories.currentLayer"
        type="com.runwaysdk.system.metadata.MdParameter"/>

      <object
        key="dss.vector.solutions.DefaultGeoEntity"
        type="com.runwaysdk.system.metadata.MdBusiness"/>
    
    </delete>
  </undoIt>
</version>
